.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
}

.header1{
  font-size: 40rpx;
}

.header2{
  font-size: 32rpx;
  margin-top: 20rpx;
  font-weight: 300;
}

.body{
  width: 640rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 90rpx;
}

.body .line{
  width: 100%;
  height: 2rpx;
  background-color: #ececec;
}

.body .holder{
  margin: 30rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
}

.body .holder .icon{
  width: 60rpx;
  height: 60rpx;
}

.body .holder input{
  margin-left: 40rpx;
  width: 420rpx;
  color: #484848;
}

.body .holder .title{
  width: 120rpx;
}

.next{
  width: 584rpx;
  height: 80rpx;
  background-color: #ffbb00;
  border-radius: 50rpx;
  margin-top: 300rpx;
  font-size: 42rpx;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: none;
}
