page {
  background: linear-gradient(#ffffff, #7b3df3);
}

.container {
  align-items: center;
}

.header {
  width: 750rpx;
  height: 396rpx;
}

.num_container {
  width: 694rpx;
  height: 110rpx;
  margin-top: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  font-size: 36rpx;
}

.num_container .background {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -9;
}

.num {
  margin-left: 64rpx;
  color: #3f46cb;
}

.list {
  width: 686rpx;
  min-height: 440rpx;
  background-color: #f4f4f4;
  border-radius: 10rpx;
  margin: 24rpx 36rpx 0 36rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20rpx 18rpx;
  box-sizing: border-box;
}

.tail {
  width: 686rpx;
  background-color: #f4f4f4;
  border-radius: 10rpx;
  margin: 24rpx 36rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20rpx 18rpx;
}

.title {
  font-size: 30rpx;
  margin: 0 0 10rpx 0;
}

.tail .content {
  font-size: 22rpx;
  margin: 6rpx 0rpx;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 18rpx 36rpx;
}

.item .icon {
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
}

.item .info {
  display: flex;
  flex-direction: column;
  width: 310rpx;
  margin: 0 15rpx;
}

.item .info .phone {
  color: black;
  font-size: 28rpx;
  font-weight: 400;
}

.item .info .tip {
  color: black;
  font-size: 28rpx;
  font-weight: 200;
  margin-top: 15rpx;
}

.item .state {
  width: 204rpx;
  height: 60rpx;
  font-size: 30rpx;
  background-color: #fedf0e;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}