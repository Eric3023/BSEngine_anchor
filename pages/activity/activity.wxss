page {
  background: white;
}

.header {
  height: 384rpx;
  display: flex;
  flex-direction: column;
  background-color: #ebebeb;
  position: relative;
}

/*背景图片*/
.header .background {
  width: 100%;
  height: 100%;
}

.header scroll-view{
  position: absolute;
  left: 0;
  bottom: 0;
}

.header .state {
  display: flex;
  flex-direction: row;
  margin: 8rpx;
}

.header .state .icon{
  width: 144rpx;
  height: 144rpx;
  margin: 8rpx;
}


.category{
  margin-bottom: 40rpx;
}


.case-list {
  background-color: white;
  border-radius: 5rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
}

.case-list .title {
  font-style: #242424;
  font-size: 30rpx;
  margin: 12rpx 32rpx;
  font-weight: 400;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.case-list .title:first-child {
  font-weight: 600;
}

.case-list .title .rank{
  font-size: 20rpx;
  color: #6d6d6d;
  border: 1rpx #6d6d6d solid;
  border-radius: 20rpx;
  margin: 0rpx 32rpx;
  padding: 4rpx 12rpx;
}

.case-list .body {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  margin: 0 50rpx;
}

.case-list .body_left {
  width: 315rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  font-size: 28rpx;
}

.case-list .body_right {
  width: 315rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  font-size: 28rpx;
}