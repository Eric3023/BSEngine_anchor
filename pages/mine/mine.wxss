.container {
  display: flex;
  flex-direction: column;
}

.header_container {
  height: 628rpx;
  box-shadow: 0rpx 0rpx 10rpx 4rpx #ebebeb;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header_container .background {
  width: 100%;
  height: 100%;
  background-color: #5e5a58;
  position: absolute;
  top: 0;
  z-index: 0;
}

.user_info {
  width: 710rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  margin-top: 264rpx;
}

.user_info .header_user_container {
  margin-left: 30rpx;
}

.authentication {
  width: 190rpx;
  height: 72rpx;
  background-color: #ffbb00;
  color: #ab6c29;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0rpx;
  bottom: 28rpx;
  border-bottom-left-radius: 40rpx;
  border-top-left-radius: 40rpx;
}

.header_user_balance {
  width: 710rpx;
  margin-top: 80rpx;
  z-index: 9;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.header_user_balance .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 32rpx;
}

.header_user_balance .item text {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 32rpx;
  margin-top: 5rpx;
}

.body_container {
  background-color: white;
  margin-top: 12rpx;
  box-shadow: 0rpx 0rpx 10rpx 4rpx #ebebeb;
}

.tail_container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 80rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #7c7c7c;
}

.header_balance_container {
  margin-left: 34rpx;
  margin-right: 34rpx;
  margin-top: 44rpx;
  margin-bottom: 40rpx;
  height: 110rpx;
}

.nickname::after {
  border: none;
  font-size: 25rpx;
}