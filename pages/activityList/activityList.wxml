<wxs src="util.wxs" module="util" />
<wxs src="../../utils/date.wxs" module="date" />

<view class="container">
	<text class="header">{{util.getTitle(type)}}列表</text>
	<view class="list">
		<view class="item touch-item {{item.isTouchMove ? 'touch-move-active' : ''}}" wx:for="{{items}}" wx:key="index" data-index="{{index}}" bindtouchstart="touchstart" bindtouchmove="touchmove" catchtap="onExecue">
			<view class="content">
				<image class="img" src="{{item.picUrl}}" mode="aspectFill"></image>
				<view class="sub_container">
					<view class="title_container">
						<text class="title">{{item.name}}</text>
						<text class="time">活动时间：{{date.parse(item.startTime)}}-{{date.parse(item.endTime)}}</text>
					</view>
					<view class="btn_container center">
						<text class="button" catchtap="onExecue">{{util.getAction(type)}}</text>
					</view>
				</view>
			</view>
			<view class="del" catchtap="del" data-index="{{index}}">删除</view>
		</view>
	</view>
</view>