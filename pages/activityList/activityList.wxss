page {
  background-color: #f6f6f6;
}

.container {
  width: 100%;
  height: 100%;
}

.header {
  margin-left: 20rpx;
  margin-top: 50rpx;
  font-size: 36rpx;
  color: black;
}

.list {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.item {
  margin-top: 30rpx;
  background-color: white;
  box-shadow: 0 0 10rpx #cecece;
  border-radius: 10rpx;
}

.content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.img {
  width: 100%;
  height: 280rpx;
}

.item .cancel {
  width: 118rpx;
  height: 48rpx;
  color: white;
  background-color: #d9d9d9;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  margin-right: 12rpx;
}

.item .button {
  width: 118rpx;
  height: 48rpx;
  color: white;
  background-color: #ffbb00;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
}

.item .sub_container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item .btn_container {
  width: 250rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.item .sub_container .title_container {
  margin: 16rpx 16rpx;
  width: 450rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 30rpx;
  color: black;
}

.time {
  font-size: 26rpx;
  color: #a8a8a8;
  margin-top: 16rpx;
  line-height: 28rpx;
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden
}

.content {
  width: 100%;
  line-height: 22px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}