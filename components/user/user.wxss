/* components/user/user.wxss */
.user_container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.uicon {
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  /* border: 6rpx solid #ffffff; */
  overflow: hidden;
}

.uicon image {
  width: 125rpx;
  height: 125rpx;
}

.content {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.nickName {
  line-height: normal !important;
  font-size: 32rpx !important;
  color: white !important;
  background-color: transparent !important;
  line-height: normal;
  padding: 0 !important;
  border: none !important;
}

.uid {
  line-height: normal !important;
  font-size: 28rpx !important;
  color: white !important;
  margin-top: 12rpx !important;
  border: none !important;
  background-color: transparent !important;
  line-height: normal;
  padding: 0 !important;
  border: none !important;
}

.uid::after {
  line-height: normal;
  padding: 0 !important;
  border: none !important;
}

.nickName::after {
  line-height: normal;
  padding: 0 !important;
  border: none !important;
}